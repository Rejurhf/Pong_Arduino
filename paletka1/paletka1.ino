#include <LedControl.h>int DIN = 5;int CS =  4;int CLK = 3;byte pos[8] = {128,0,0,0,0,0,0,0};     byte qutas[8] = {16,56,56,56,56,124,254,108};LedControl lc = LedControl(DIN,CLK,CS,0);void setup(){ lc.shutdown(0,false);       //The MAX72XX is in power-saving mode on startup lc.setIntensity(0,1);      // Set the brightness lc.clearDisplay(0);         // and clear the display}void loop(){    printArray(pos);    delay(400);        for(int i = 0; i < 7; ++i){      direction(2);    }    printByte(qutas);    delay(1000);        Serial.println();    for(int i = 0; i < 7; ++i){      direction(5);    }    printByte(qutas);    delay(1000);        Serial.println();    for(int i = 0; i < 7; ++i){      direction(1);    }    printByte(qutas);    delay(1000);        Serial.println();    for(int i = 0; i < 7; ++i){      direction(4);    }    printByte(qutas);    delay(1000);        Serial.println();    for(int i = 0; i < 7; ++i){      direction(3);    }    printByte(qutas);    delay(1000);        Serial.println();    for(int i = 0; i < 7; ++i){      direction(6);    }    printByte(qutas);    delay(1000);        Serial.println();    for(int i = 0; i < 7; ++i){      direction(0);    }    printByte(qutas);    delay(1000);        Serial.println();    for(int i = 0; i < 7; ++i){      direction(7);    }    printByte(qutas);    delay(1000);    Serial.println();            lc.clearDisplay(0);    delay(1000);}void printByte(byte character []){  int i = 0;  for(i=0;i<8;i++)  {    lc.setRow(0,i,character[i]);  }}void direction(int option){  switch (option){    case 0:       //go down      goDown();      break;    case 1:       //go up      goUp();      break;    case 2:       //go right      goRight();      break;    case 3:       //go left      goLeft();      break;    case 4:       //go down and right      goDown();      goRight();      break;    case 5:       //go down and left      goDown();      goLeft();      break;    case 6:       //go up and right      goUp();      goRight();      break;    case 7:       //go up and left      goUp();      goLeft();      break;  }    printArray(pos);  printByte(pos);  delay(100);}void goDown(){  int index = posOfIndex();  if(index < 7){    pos[index + 1] = pos[index];    pos[index] = 0;  }}void goUp(){  int index = posOfIndex();  if(index > 0){    pos[index - 1] = pos[index];    pos[index] = 0;  }}void goRight(){  int index = posOfIndex();  if(pos[index] > 1){    pos[index] = pos[index] / 2;  }}void goLeft(){  int index = posOfIndex();  if(pos[index] < 128){    pos[index] = pos[index] * 2;  }}int posOfIndex(){  int index = 0;  while(pos[index] == 0){    ++index;  }  return index;}void printArray(byte arr[]){  for(int i = 0; i < 8; ++i){    Serial.print(arr[i], DEC);     Serial.print(", ");   }  Serial.println();}